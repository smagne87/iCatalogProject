@model iCatalogSite.Areas.Admin.Models.CategoryModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_emptyLayout.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#categoryCreateForm').on('submit', function (e) {
            e.preventDefault();
            var jqForm = $(this);
            var formData = jqForm.serialize();
            callCreate(jqForm, formData);
        });
    });
</script>

<h2>Create</h2>

@using (Html.BeginForm("Create", "Category", FormMethod.Post, new { id = "categoryCreateForm", @role = "form" }))
{
    <fieldset>
        <div id="errorPlaceHolder" style="display: none;">
            @Html.ValidationSummary()
        </div>
        <div id="messagePlaceHolder" style="display: none;">
        </div>
        <legend>New Category</legend>
        <div class="form-group">
            <label>@Html.LabelForRequired(model => model.CategoryName)</label>
            @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control", placeholder = "Name" })
        </div>
        <div class="form-group">
            <label>@Html.LabelForRequired(model => model.CategoryDescription)</label>
            @Html.TextBoxFor(model => model.CategoryDescription, new { @class = "form-control", placeholder = "Description" })
        </div>
        <input type="submit" class="btn btn-primary" value="Save"/>
        <a class="btn btn-default" href="#" onclick="cancelPage();">Cancel</a>
    </fieldset>
}